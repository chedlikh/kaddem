pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    tools {
        maven 'M2_HOME' // Assurez-vous que ce nom correspond à l'installation Maven configurée dans Jenkins
    }
    stages {
        stage("Check out") {
            steps {
                withSonarQubeEnv('sq1') {
                    sh 'mvn clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar'
                }
            }
        }
    }
}
