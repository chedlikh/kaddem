pipeline {
    agent any

    environment {
        EMAIL_RECIPIENTS = 'chdouuulaa@gmail.com'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building project...'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                }
            }
        }
    }

    post {
        success {
            script {
                emailext(
                    subject: "Build Notification: ${currentBuild.fullDisplayName}",
                    body: "The build status is: ${currentBuild.result}\n\nBuild Log: ${env.BUILD_URL}",
                    to: env.EMAIL_RECIPIENTS
                )
            }
        }
        unstable {
            script {
                emailext(
                    subject: "Build Notification: ${currentBuild.fullDisplayName} (Unstable)",
                    body: "The build status is: ${currentBuild.result}\n\nBuild Log: ${env.BUILD_URL}",
                    to: env.EMAIL_RECIPIENTS
                )
            }
        }
        failure {
            script {
                emailext(
                    subject: "Build Notification: ${currentBuild.fullDisplayName} (Failed)",
                    body: "The build status is: ${currentBuild.result}\n\nBuild Log: ${env.BUILD_URL}\n\nPlease check the logs for details.",
                    to: env.EMAIL_RECIPIENTS
                )
            }
        }
        always {
            script {
                emailext(
                    subject: "Build Notification: ${currentBuild.fullDisplayName} (Always)",
                    body: "The build status is: ${currentBuild.result}\n\nBuild Log: ${env.BUILD_URL}",
                    to: env.EMAIL_RECIPIENTS,
                    recipientProviders: [developers(), requestor()]
                )
            }
        }
    }
}
