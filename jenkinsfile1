pipeline {
    agent any

    environment {
        EMAIL_RECIPIENTS = 'chdouuulaa@gmail.com'
        DEFAULT_SUBJECT = 'Build Notification: MyBuild'
        DEFAULT_BODY = 'The build status is: SUCCESS\n\nBuild Log: http://example.com'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building project...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
    }

    post {
        success {
            emailext(
                subject: "MyBuild - Build Successful",
                body: 'The build was successful.',
                to: 'chdouuulaa@gmail.com'
            )
        }
        failure {
            emailext(
                subject: "MyBuild - Build Failed",
                body: 'The build failed. Please check the logs.',
                to: 'chdouuulaa@gmail.com'
            )
        }
    }
}
